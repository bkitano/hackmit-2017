<link rel='stylesheet' text='text/css' href='/assets/css/dashboard.css'>
<h1 class="jumbotron">Search Results</h1>
<div class="card-container">
    {{#each apps}}
        <div class='card' style="width: 20rem;" id={{this.internshipID}}>
            <div class='card-title company'>
                <h4>{{this.company}}</h4>
            </div>
            <div class='card-text position'>
                <p>{{this.position}}</p>
            </div>
            <div class='card-text deadline'>
                <p>{{this.deadline}}</p>
            </div>
            <div>
                <form action="/search/add/{{this.internshipID}}" method='post'>
                    <button class="btn btn-success" type="submit" class='card-text company'>Add</button>
                </form>
            </div>
            <div class='card-text company'>
                <a href={{this.url}}>
                    <button class="btn btn-primary">Apply</button>
                </a>
            </div>
        </div>
    {{/each}}
</div>